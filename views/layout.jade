doctype html
html
    head
        title= title
        meta(name="description", content="The Gender Agenda is a radio show and podcast that examines the gender dimension aspects of Jewish life in Australia and beyond.  We cover topical issues relating to health, family, career, politics, religion and cultural life from a gender perspective")
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
        link(rel="icon", href="/img/favicon.ico", type="image/x-icon")
        link(rel='stylesheet', href='/dist/semantic.min.css')
        link(rel='stylesheet', href='/css/style.css')
    body(class="pushable")
        div(class="ui small top fixed eight item menu transition hidden computer tablet only")
            div(class="ui container")
                // Add Logo
                a(href="/", class="item")
                    img(class="ui image", src="/img/logo-icon.png", height="32", alt="The Gender Agenda")
                for category, i in categories
                    a(href="/?category=#{category.name}", class=i === activeTab ? 'active item' : 'item') #{category.name}
                //Add About column
                div(class="ui dropdown item") About
                    i(class="dropdown icon")
                    div(class="menu")
                        div(class="item")
                            a(href="/about") Our Story
                        div(class="item")
                            a(href="/about/hosts") Hosts
                        div(class="item")
                            a(href="/about/faq") FAQ
        div(class="ui vertical inverted sidebar menu right")
            // Add Logo
            a(class="logo", href="/")
                img(src="/img/logo-icon.png", height="100", alt="The Gender Agenda")
            div(class="item") Categories
                for category, i in categories
                    a(href="/?category=#{category.name}", class=i === activeTab ? 'active item' : 'item') #{category.name}
            //Add About column
            div(class="item") About
                a(href="/about", class="item") Our Story
                a(href="/about/hosts", class="item") Hosts
                a(href="/about/faq", class="item") FAQ

        div(class="pusher")
            div(class="ui vertical basic masthead center aligned segment no padding")
                div(class="ui header no margin")
                    div(class="ui eight item pointing borderless menu padded grid")
                        div(class="mobile tablet only row")
                            a(class="item")
                                img(class="ui image", src="/img/logo.png", width="128", alt="The Gender Agenda")
                            div(class="right menu")
                                a(class="toc item")
                                    i(class="sidebar icon")
                        div(class="computer only centered row")
                            // Add Logo
                            a(href="/", class="item")
                                img(class="ui image", src="/img/logo-icon.png", height="32", alt="The Gender Agenda")
                            for category, i in categories
                                a(href="/?category=#{category.name}", class=i === activeTab ? 'active item' : 'item') #{category.name}
                            //Add About column
                            div(class="ui dropdown item") About
                                i(class="dropdown icon")
                                div(class="menu")
                                    div(class="item")
                                        a(href="/about") Our Story
                                    div(class="item")
                                        a(href="/about/hosts") Hosts
                                    div(class="item")
                                        a(href="/about/faq") FAQ
                    if homepage === true
                        div(class="ui stackable one column padded grid banner")
                            div(class="centered eight wide row", href="/")
                                a(class="middle aligned column")
                                    h1(class="ui header white")
                                        img(class="ui centered image no margin", src="/img/logo.png", width="720", alt="The Gender Agenda")
                    else if post
                        div(class="ui stackable one column centered padded grid banner overflow")
                            div(class="row", style=post.better_featured_image === null ? "background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7))" : "background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url(#{post.better_featured_image.source_url}) center center no-repeat")
                                div(class="eight wide middle aligned left aligned centered column")
                                    for category in postCategories
                                        p(class="post category ui red ribbon label") #{category.name}
                                    h1(class="ui header post white title no margin") #{title}
                                    p(class="post author") #{author.name}
                    else
                        div(class="ui stackable one column padded grid banner")
                            div(class="centered row", href="/")
                                a(class="eight wide middle aligned column")
                                    h1(class="ui huge header white no margin") #{title}
            div(class="ui stripe segment no margin")
                block content
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js")
        script(src="/dist/semantic.min.js")
        script.
            $(document)
                    .ready(function () {

                        // fix menu when passed, but not on mobile screens
                        if (screen.width >= 768) {
                            $('.masthead')
                                    .visibility({
                                        once: false,
                                        onBottomPassed: function () {
                                            $('.fixed.menu').transition('fade in');
                                        },
                                        onBottomPassedReverse: function () {
                                            $('.fixed.menu').transition('fade out');
                                        }
                                    });
                        }


                        // create sidebar and attach to menu open
                        $('.ui.sidebar')
                                .sidebar('attach events', '.toc.item');

                        $('.ui.dropdown')
                                .dropdown();
                    });
