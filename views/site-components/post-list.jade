for post in posts
    a(class="item", href="/post/#{post.slug}")
        div(class="image")
            if post.better_featured_image
                if post.better_featured_image.source_url
                    img(class="ui fluid image", src="#{post.better_featured_image.media_details.sizes.thumbnail.source_url}", alt="#{post.better_featured_image.alt_text}")
                else
                    img(class="ui image featured-placeholder manual-center", src="#{logoIcon.url}", alt="#{logoIcon.alt}")
            else
                img(class="ui image featured-placeholder manual-center", src="#{logoIcon.url}", alt="#{logoIcon.alt}")
        div(class="content")
            div(class="header")
                h3(class="ui header") !{post.title.rendered}
            div(class="meta")
                span(class="publish-date") #{post.date}
            div(class="description") !{post.excerpt.rendered}
            div(class="extra")
                button(class="ui right floated red button") Read More